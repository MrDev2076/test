<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Translator App</title>
  <link rel="icon" href="https://talkao.com/wp-content/uploads/2022/09/augmented-reality-translate-icon.png" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-dark">

  <!-- Navbar -->
  <nav class="bg-blue-600 p-4 shadow-md">
    <div class="max-w-screen-xl px-16 mx-auto flex justify-between items-center">
      <h1 class="text-white text-2xl font-semibold"><a href="/" class="text-white">Text Translator</a></h1>
      <div class="flex space-x-4">
        <a href="/profile" class="text-white text-sm   duration-300 ease-in-out hover:bg-yellow-500 px-4 py-2 rounded">Profile</a>
        <a href="/settings" class="text-white  text-sm  duration-300 ease-in-out hover:bg-yellow-500 px-4 py-2 rounded">Settings</a>
        <% if (user && user.role !== 'user') { %>  
          <a href="/admin" class="text-white text-sm  duration-300 ease-in-out hover:bg-yellow-500 px-4 py-2 rounded">Admin</a>
        <% } %>
        <a href="/logout" class="text-white text-sm duration-300 ease-in-out hover:bg-yellow-500 px-4 py-2 rounded">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Main Section -->
  <section class="max-w-screen-xl px-16 py-8 flex justify-between items-center">
    <div class="w-1/3 my-auto">
      <% if (user.name) { %>
        <h1 class="text-4xl text-dark font-semibold m-10 absolute left-20 top-40">Hello <span class="text-emerald-400"><%= user.name %></span>!</h1>
      <% } %>

      <!-- Analytics (Circular Progress Bar) -->
      <div class="max-w-screen-xl  flex justify-end items-center h-[80vh] mt-24">
        <button onclick="loadFaceAnalyzer()" 
        class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-700">
        Open Face Analyzer
    </button>
      </div>
    </div>

    <!-- Form Section for Translation -->
    <main class="w-2/3 min-h-[90vh] bg-gray-100 flex flex-col items-center justify-center p-6">
      <iframe id="faceAnalyzerFrame" class="w-full h-[500px] mt-4 hidden border"></iframe>
    </main>
  </section>
  <script>
     function loadFaceAnalyzer() {
        const frame = document.getElementById('faceAnalyzerFrame');
        frame.src = "/index.html";  // Load the file from the public folder
        frame.classList.remove('hidden');  // Show the iframe
    }
  </script>
</body>
</html>